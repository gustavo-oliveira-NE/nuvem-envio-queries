/*
  Nome: Options status
  Descrição: Estado de las modalidades EN activas en el checkout
*/
SELECT 
        c.store_id 
        ,ARRAY_JOIN(ARRAY_AGG(DISTINCT o.name), ', ') AS en_shipping_options_currently_enabled
FROM curated.moltres.mwp_shipping_carriers c
INNER JOIN curated.moltres.mwp_shipping_carriers_options o 
        ON o.carrier_id = c.id
WHERE TRUE 
        AND c.app_id = 9075
        AND c.status  = 1
        AND o.status  = 1
        AND c.deleted_at IS NULL 
        AND o.deleted_at IS NULL
GROUP BY 1
